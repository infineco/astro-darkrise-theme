---
import AnimatedAnchor from "@/components/AnimatedAnchor.astro";
import ImageMod from "@/components/ImageMod.astro";
import { getSinglePage } from "@/lib/contentParser.astro";
import { markdownify } from "@/lib/utils/textConverter";
import type { CollectionEntry } from "astro:content";
import { getEntry } from "astro:content";

const integrationIndex = (await getEntry(
  "integration",
  "-index"
)) as CollectionEntry<"integration">;

const { title, description } = integrationIndex.data;

const list = await getSinglePage("integration");
---

{
  (
    <section class="section">
      <div class="container">
        <div class="row">
          <div class="mx-auto text-center lg:col-6" data-aos="fade-up-sm">
            {title && <h2 class="has-gradient" set:html={markdownify(title)} />}
            {description && (
              <p
                class="mt-6 text-lg/[inherit] opacity-80"
                set:html={markdownify(description)}
              />
            )}
          </div>
          <div class="col-12 pt-20 relative">
            <div class="row g-4 justify-center">
              {list?.map(({ data, id }, index) => (
                <div
                  class="md:col-6 lg:col-4"
                  data-aos="fade-up-sm"
                  data-aos-delay={index * 100}>
                  <div class="group relative min-h-full overflow-hidden rounded-lg border border-white/5 bg-dark p-9 duration-300 hover:-translate-y-1">
                    <div class="relative z-20">
                      <div class="mb-6 flex items-center gap-4">
                        {data.image && (
                          <ImageMod
                            class="h-[70px] w-[70px] object-cover transition duration-300 group-hover:scale-90"
                            src={data.image}
                            alt={`icon related to ${data.title}`}
                          />
                        )}
                        <div>
                          {data.title && (
                            <h3
                              class="tracking-none mb-1 text-xl/snug font-semibold"
                              set:html={markdownify(data.title)}
                            />
                          )}
                          {data.type && (
                            <p
                              class="tracking-none mt-0 opacity-70"
                              set:html={markdownify(data.type)}
                            />
                          )}
                        </div>
                      </div>
                      {data.description && (
                        <p
                          class="opacity-80"
                          set:html={markdownify(data.description)}
                        />
                      )}

                      <AnimatedAnchor
                        className="btn-inline mt-8"
                        label={"View Integration"}
                        link={"/integration/" + id + "/"}
                      />
                    </div>

                    <div class="pointer-events-none absolute bottom-[-22%] right-[-40%] h-[180px] w-[335px] rotate-[-20deg] from-dark/0 to-secondary opacity-0 blur-[83px] transition-opacity duration-300 bg-gradient-to-l group-hover:opacity-100" />
                  </div>
                </div>
              ))}
            </div>
            <div
              aria-hidden="true"
              class="rotate-animation pointer-events-none absolute -right-10 top-0 -z-10 h-80 w-[550px] -translate-x-2/4 rounded-full from-secondary via-secondary/80 via-60% to-dark/0 opacity-30 blur-[120px] bg-gradient-to-l"
            />
          </div>
        </div>
      </div>
    </section>
  )
}
