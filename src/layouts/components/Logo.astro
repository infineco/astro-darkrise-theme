---
import config from "@/config/config.json";
import ImageMod from "./ImageMod.astro";

interface Props {
  src?: string;
  class?: string;
  footerLogo?: boolean;
}

const { src, class: className, footerLogo } = Astro.props;

const {
  logo,
  logo_footer,
  logo_width,
  logo_footer_width,
  logo_height,
  logo_footer_height,
  logo_text,
  title,
}: {
  logo: string;
  logo_footer: string;
  logo_width: any;
  logo_footer_width: any;
  logo_height: any;
  logo_footer_height: any;
  logo_text: string;
  title: string;
} = config.site;
---

<a
  href="/"
  class={`navbar-brand inline-block${
    !logo || !logo_footer ? " logo-text" : ` `
  }`}>
  {
    src || logo || logo_footer ? (
      <>
        {footerLogo ? (
          <ImageMod
            src={logo_footer ? logo_footer : src || "/images/logo.svg"}
            class={`inline-block ${className ? className : ""}`}
            width={logo_footer_width.replace("px", "") * 2}
            height={logo_footer_height.replace("px", "") * 2}
            alt={title}
            style={{
              height: logo_footer_height.replace("px", "") + "px",
              width: logo_footer_width.replace("px", "") + "px",
            }}
          />
        ) : (
          <ImageMod
            src={src ? src : logo}
            class={`inline-block ${className ? className : ""}`}
            width={logo_width.replace("px", "") * 2}
            height={logo_height.replace("px", "") * 2}
            alt={title}
            style={{
              height: logo_height.replace("px", "") + "px",
              width: logo_width.replace("px", "") + "px",
            }}
          />
        )}
      </>
    ) : logo_text ? (
      logo_text
    ) : (
      title
    )
  }
</a>
