---
import Base from "@/layouts/Base.astro";
import CallToAction2 from "@/partials/CallToAction2.astro";
import ChangelogSection from "@/partials/ChangelogSection.astro";
import type { CollectionEntry } from "astro:content";
import { getEntry } from "astro:content";

const feature = (await getEntry(
  "feature",
  "-index"
)) as CollectionEntry<"feature">;
const { title, description, meta_title, image } = feature.data;
---

<Base
  title={title}
  meta_title={meta_title}
  description={description}
  image={image}>
  <ChangelogSection />
  <CallToAction2 />
</Base>
